{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "noEmit": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "preserveConstEnums": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "DOM"
    ],
    "outDir": "./build",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}
