{
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "./build",
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ]
}
